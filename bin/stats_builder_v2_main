					  $sql = "SELECT pool_account_id, worker_id, user_id, name FROM ".DB_PREFIX."cloudminr_workers WHERE worker_id='".$worker."' AND pool_account_id='".$cloudminr_pool[0]."'";
            $worker_query = mysql_query($sql) or die(mysql_error());
