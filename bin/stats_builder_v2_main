            } else {
              $worker_name = '';
            }
            $sql = "SELECT COUNT(DISTINCT(worker_id)) FROM ".DB_PREFIX."cloudminr_workers WHERE active='1' AND pool_account_id='".$worker_row['pool_account_id']."'";
