            $insert_sql .= "worker_name='".$worker_name."', ";
						$insert_sql .= "hashrate='".$hashrate."', ";
						$insert_sql .= "worker_count='".$worker_count."'";
						$insert = mysql_query($insert_sql);
						if ( (isset($debugMode)) && ($debugMode >= 1) ){
						  print $insert_sql;
